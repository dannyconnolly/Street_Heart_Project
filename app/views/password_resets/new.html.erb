<h2 class="page-titles">Reset Password</h2>

<div class="form-wrap">
  <%= form_tag password_resets_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="actions"><%= submit_tag "Reset Password" %></div>
  <% end %>
</div><!--end form wrap-->


