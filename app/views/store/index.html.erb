<% if notice %>
<p id= "notice"><%= notice %></p>
<% end %>

<h1>Street_Heart Clothing</h1>

<% @products.each do |product| %>
    <div class= "entry">
      <% image_tag(product.image_url) %>
      <h3><%= product.title %></h3>
      <%= sanitize(product.description) %>
      <div class= "price_line">
        <span class= "unit_price"><%= product.unit_price %></span>
      </div>
    </div>
<%	end  %>
