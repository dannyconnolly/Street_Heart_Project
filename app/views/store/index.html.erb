<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1 class="page-titles">Street Heart Clothing</h1>

<div class="store">
  <% @products.each do |product| %>
      <div class="entry">

        <%= image_tag (product.productimage_url(:store_img).to_s) %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>

        <div class="price_line">
          <span class="unit_price"><%= number_to_currency(product.unit_price) %></span>
          <%= button_to 'Add to cart', line_items_path(:product_id => product) %>
        </div>

      </div>
  <% end %>
</div>