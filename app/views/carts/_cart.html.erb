<div class="cart-wrap">

  <%= render(cart.line_items) %>

  <div class="total_line">
    <div class="total-title">Total</div>

    <div class="total-price">
      <%= number_to_currency(cart.total_price) %>
    </div>
    <!--end total price-->
  </div>

  <div class="checkout-options">
    <ul>
      <li><%= link_to 'Continue Shopping', store_url, :class => 'checkout-btns' %> </li>
      <li><%= button_to 'Empty Cart', @cart, :confirm => 'Are you sure?', :method => :delete, :class => 'checkout-btns' %></li>
      <li><%= link_to 'Checkout', new_order_path, :method => :get, :class => 'checkout-btns' %></li>
      <li><%= link_to 'Checkout With Paypal', @cart.paypal_url(store_url, payment_notifications_url), :class => 'checkout-btns' %></li>
    </ul>

  </div>
  <!--End checkout options-->
</div>

