<% if notice %>
    <p class="notice"><%= notice %></p>
<% end %>

<div class="user-middle-wrap">

  <div class="user-profile">
    <div class="user-avatar">
      <%= image_tag (@user.avatar_url(:thumb).to_s) %>
    </div>
    <!--End user-avatar-->

    <div class="user-details">
      <h1><%= @user.name %></h1>

      <p><%= @user.email %></p>
    </div>
    <!--End user-details-->

    <div class="user-edit">
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>
    <!--End user-edit-->
  </div>
  <!--End user-profile-->

  <div class="user-orders">
     <h2>Your Orders</h2>
    <%= %>
   </div><!--End user recommendations-->


  <div class="user-recommendations">
    <h2>Your Recommendations</h2>
  </div><!--End user recommendations-->

  <div class="user-reviews-partial">
    <h2>Your Reviews</h2>
   <% @user.reviews.each do |user_review| %>
        <p><%= user_review.product.title %></p>
        <p><%=image_tag (user_review.product.productimage_url(:thumb).to_s) %></p>
        <p><%= user_review.body %></p>

    <% end %>
  </div><!--End user reviews partial-->

</div><!--End user-middle-wrap-->

<div class="user-right-side">
  <% if admin? %>
      <div class="admin-right">

      </div><!--End admin right-->
    <% else %>
  <div class="user-cart-partial">
    <%= render @cart %>
  </div>
  <!--End user cart partial-->

  <div class="user-wishlist-partial">
    <%= render @wishlist %>
  </div>
  <!--end user wishlist partial-->

    <% end %>

</div> <!--End user-right-side-->