<div class="middle-wrap">

  <div class="user-profile">
    <div class="user-avatar">
      <%= image_tag (@user.avatar_url(:thumb).to_s) %>
    </div>
    <!--End user-avatar-->

    <div class="user-details">
      <h1><%= @user.name %></h1>

      <p><%= @user.email %></p>

    </div>
    <!--End user-details-->

    <div class="user-edit">
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>
    <!--End user-edit-->
  </div>
  <!--End user-profile-->

  <div id="tabs">
    <ul>
      <li><a href="#tabs-1">Your Orders</a></li>
      <li><a href="#tabs-2">Your Recommendations</a></li>
      <li><a href="#tabs-3">Your Reviews</a></li>
    </ul>

    <div id="tabs-1">
      <%= render 'orders/user_order' %>
    </div>
    <!--End user recommendations-->

    <div id="tabs-2">
      <h3 class="user-section-titles">Your Recommendations</h3>
    </div>
    <!--End user recommendations-->

    <div id="tabs-3">
      <%= render 'reviews/user_review' %>
    </div>
    <!--End user reviews partial-->
  </div>
  <!--end tabs-->

</div><!--End user-middle-wrap-->

<div class="right-side">
  <% if admin? %>

  <% else %>
      <div class="partial">
        <h4 class="partial-titles">Your Cart</h4>
        <%= hidden_div_if(@cart.line_items.empty?, :id => 'cart') do %>
            <%= render @cart %>
        <% end %>
      </div>
      <!--End user cart partial-->

      <div class="partial">
       <%= render @wishlist %>
      </div>
      <!--end user wishlist partial-->
  <% end %>

</div> <!--End user-right-side-->