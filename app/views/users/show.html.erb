<% if notice %>
    <p class="notice"><%= notice %></p>
<% end %>
<div class="user-middle-wrap">

  <div class="user-profile">
    <div class="user-avatar">
      <%= image_tag (@user.avatar_url(:thumb).to_s) %>
    </div>
    <!--End user-avatar-->

    <div class="user-details">
      <h1><%= @user.name %></h1>

      <p><%= @user.email %></p>
    </div>
    <!--End user-details-->

    <div class="user-edit">
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>
    <!--End user-edit-->
  </div>
  <!--End user-profile-->

  <div class="user-recommendations">
    <h2>Your Recommendations</h2>
  </div>
  <!--End user recommendations-->
</div><!--End user-middle-wrap-->

<div class="user-right-side">
  <h2>Your Cart</h2>

  <div class="wishlist-partial">
    <h2>Your Wishlist</h2>
    <%= render @wishlist %>
  </div>
  <h2>Your Reviews</h2>
</div> <!--End user-right-side-->