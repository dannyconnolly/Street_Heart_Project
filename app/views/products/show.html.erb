<div class="single-product-wrap">

  <div class="single-product-img">
    <%= image_tag @product.productimage_url(:large_img).to_s %>
  </div>
  <!--End single page img-->

  <div class="single-product-title">
    <h1><%= @product.title %></h1>
  </div>
  <!--End single page title-->

  <div class="single-product-price">
    <h2><%= number_to_currency(@product.unit_price) %></h2>
  </div>
  <!--End single page price-->

  <div class="single-product-description">
    <p><%= sanitize(@product.description) %></p>
  </div>
  <!--End single page description-->

  <div class="single-product-keywords">
    <p class="tags">Find similar products:
    <% @product.tags.each do |tag| %>
    <%= link_to tag.name, :controller => :tags, :action => :show %>,
    <% end %></p>
  </div>
  <!--End single-product-keywords-->

  <div class="add-btn">
    <%= button_to 'Add to cart', line_items_path(:product_id => @product), :class => "btns" %>
    <%= button_to 'Add to Wishlist', wishlist_items_path(:product_id => @product), :class => "btns" %>
  </div>
  <!--End add-btn-->

  <% if admin? %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
  <% end %>

  <div class="reviews">
    <div id="tabs">
      <ul>
        <li><a href="#tabs-1">Read Customer Reviews for this product</a></li>
        <li><a href="#tabs-2">Write a review for this product</a></li>
      </ul>

      <div id="tabs-1">
        <%= render @product.reviews %>
      </div>
      <!--End review-wrap-->

      <div id="tabs-2">
        <%= render 'reviews/form' %>
      </div><!--End product-reviews-form-->

    </div><!-- end tabs-->
  </div><!-- end reviews-->
</div><!--End single page wrap-->
