<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>
<% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
<% end %>

<h2 class="page-titles">Please Login</h2>

<% form_tag sessions_path do %>
       <fieldset>
			<legend>Please Enter Your Details</legend>
    <div class="field">
      <%= label_tag :email %>
      <br/>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <br/>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
           </fieldset>
<% end %>