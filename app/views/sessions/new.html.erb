<h2 class="page-titles">Please Login</h2>

  <% form_tag sessions_path do %>
      <fieldset>

        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email],  :placeholder => "example@email.com" %>
        </div>

        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password, params[:password],  :placeholder => "Enter Password"
 %>
        </div>

        <div class="field">
          <em><%= link_to "forgotten password?", new_password_reset_path %></em>
        </div>

        <div class="remove-field">
          <%= label_tag :remember_me %>
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        </div>

        <div class="actions">
          <%= submit_tag 'Login' %>
        </div>
        <p>Not already a member? <%= link_to 'Register', new_user_path %></p>
      </fieldset>
  <% end %>
